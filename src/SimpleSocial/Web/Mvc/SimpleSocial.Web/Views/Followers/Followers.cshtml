@model SimpleSocial.Services.Models.Followers.UsersListViewModel

@{
    ViewData["Title"] = "Followers";
}
@using X.PagedList;
@using X.PagedList.Mvc.Core
<div class="row">
    <div class="col-md-6 col-md-offset-3 who-to-follow-wrapper">
        <h2 class="text-center">Followers - @ViewData["FollowersCount"]</h2>
        <partial name="~/Views/Shared/Partials/_UsersListPartial.cshtml" model="@Model" />
    </div>
</div>

@Html.PagedListPager((IPagedList)Model.Users, pageNumbar => Url.Action("Followers", new { pageNumbar }))
