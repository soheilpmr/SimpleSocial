@model SimpleSocial.Services.Models.Reports.ReportViewModel
@{
    ViewData["Title"] = "ReportDetails";
}

<h2>@ViewData["ID"]</h2>

<div class="row">
    <h1 class="text-center">Report Id - @Model.Id</h1>
    <div class="col-md-8 col-md-offset-2">
        <div class="row post-info text-center">
            <h3>
                Post Author -
                <img src="@Model.Author.ProfilePictureURL" class="table-profile-pic">
                <a asp-controller="Profiles" asp-action="Index" asp-route-userId="@Model.PostAuthorId" style="margin-left: 5px;">
                    @Model.Author.Username
                </a>
            </h3>
            <h3>Post Content</h3>
            <div class="post-content">
                @Model.Post.Content
            </div>
            <h4>Posted On - @Model.Post.CreatedOn</h4>
            <h3>
                Report Reason - @Model.ReportReason.ToString()
            </h3>
            <a asp-controller="Posts" asp-action="PostDetails" asp-route-id="@Model.Post.Id" class="btn btn-success">See post</a>
        </div>
        <div class="row reporter-info text-center">
            <h3>
                Report Author -
                <img src="@Model.Author.ProfilePictureURL" class="table-profile-pic" />
                <a asp-controller="Profiles" asp-action="Index" asp-route-userId="@Model.AuthorId" style="margin-left: 5px;">
                    @Model.Author.Username
                </a>
                <h4>Reported On - @Model.ReportedOn</h4>
            </h3>
        </div>
        <div class="row report-actions">
            <h3 class="text-center">Actions</h3>
            <div class="delete-actions">
                <form asp-controller="Posts" asp-action="DeletePost">
                    <input name="id" type="text" value="@Model.Post.Id" hidden="hidden"/>
                    <button type="submit" class="btn btn-danger">Delete Post</button>
                </form>
                <form asp-controller="Reports" asp-action="DeleteReport">
                    <input type="text" name="id" hidden="hidden" value="@Model.Id"/>
                    <button class="btn btn-danger">Delete Report</button>
                </form>
                
            </div>
        </div>
    </div>
</div>